# ============================================
# Configuration Flask – copier vers .env
# Dev: FLASK_ENV=development | Prod: FLASK_ENV=production
# ============================================
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=8080

# ============================================
# Sécurité (générer en prod: python -c "import secrets; print(secrets.token_hex(32))")
# ============================================
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# ============================================
# Base de données
# ============================================
# SQLite (dev)
DATABASE_URL=sqlite:///instance/portfolio_pro.db
# PostgreSQL (prod): postgresql://user:password@host:5432/portfolio_pro  # pragma: allowlist secret

# ============================================
# Redis / Cache
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# CORS (domaines autorisés, séparés par des virgules)
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Logging (DEBUG|INFO|WARNING|ERROR)
# ============================================
LOG_LEVEL=DEBUG

# ============================================
# Monitoring
# ============================================
PROMETHEUS_ENABLED=True
HEALTH_CHECK_ENABLED=True

# ============================================
# Gunicorn (production)
# ============================================
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# ============================================
# GCP (optionnel, pour Cloud Run / Artifact Registry)
# ============================================
# GCP_PROJECT_ID=your-project-id
# GCP_REGION=europe-west1
