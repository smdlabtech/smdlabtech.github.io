# ============================================
# Configuration Flask
# ============================================
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=8080

# ============================================
# Sécurité
# ============================================
# ⚠️ IMPORTANT: Ne jamais commiter ces valeurs en production
# Générer avec: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production-please
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production-please

# ============================================
# Base de données
# ============================================
# SQLite (développement)
DATABASE_URL=sqlite:///instance/portfolio_pro.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/portfolio_pro

# ============================================
# Redis / Cache
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Logging
# ============================================
LOG_LEVEL=DEBUG

# ============================================
# Monitoring
# ============================================
PROMETHEUS_ENABLED=True
HEALTH_CHECK_ENABLED=True

# ============================================
# Gunicorn (Production)
# ============================================
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# ============================================
# Google Cloud Platform (si utilisé)
# ============================================
# GCP_PROJECT_ID=your-project-id
# GCP_REGION=europe-west1
# ARTIFACT_REPO=your-repo-name
